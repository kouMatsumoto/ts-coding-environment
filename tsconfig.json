{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es5", "es6", "es2015", "dom"],
    "outDir": ".",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots" : ["node_modules/@types"],
    "types" : ["node", "mocha"]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}